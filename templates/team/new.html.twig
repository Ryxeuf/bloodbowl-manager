{% extends 'base.html.twig' %}

{% block title %}Créer une équipe - Blood Bowl Manager{% endblock %}

{% block body %}
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        <div class="px-4 py-5 sm:px-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">
                Créer une nouvelle équipe
            </h3>
        </div>
        <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
            <form action="{{ path('app_team_new') }}" method="POST" class="space-y-6">
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-700">Nom de l'équipe</label>
                    <div class="mt-1">
                        <input type="text" name="name" id="name" class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md" required>
                    </div>
                </div>

                <div>
                    <label for="faction" class="block text-sm font-medium text-gray-700">Faction</label>
                    <div class="mt-1">
                        <select id="faction" name="faction" class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md" required>
                            <option value="">Sélectionnez une faction</option>
                            {% for faction in factions %}
                                <option value="{{ faction.id }}">{{ faction.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>

                <div>
                    <label for="treasury" class="block text-sm font-medium text-gray-700">Trésorerie initiale (en k)</label>
                    <div class="mt-1">
                        <input type="number" name="treasury" id="treasury" value="1000" min="0" step="10" class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md" required>
                    </div>
                </div>

                <div class="flex justify-end">
                    <a href="{{ path('app_teams') }}" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        Annuler
                    </a>
                    <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        Créer l'équipe
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %} 