<div class="space-y-4">
    <div class="flex justify-between items-center">
        <div class="space-y-1">
            <h3 class="text-lg font-bold">#{{ player.number }} - {{ player.name }}</h3>
            <div class="text-sm text-gray-600">{{ player.position.name }}</div>
        </div>
        {% include 'components/player_row/_stats.html.twig' with {player: player} %}
    </div>
    <div class="border-t border-gray-200 pt-4">
        <h4 class="font-bold mb-2">Compétences</h4>
        <div class="flex flex-wrap gap-2">
            {% for skill in player.position.skills %}
                <div class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded" title="{{ skill.description }}">
                    {{ skill.name }}
                </div>
            {% endfor %}
        </div>
    </div>
    {% if isPlayerFromUserTeam %}
        <div class="border-t border-gray-200 pt-4">
            <h4 class="font-bold mb-2">Actions</h4>
            <div class="flex flex-wrap gap-2">
                <button class="w-10 h-10 bg-white rounded-full hover:bg-gray-100 transition-all duration-200 flex items-center justify-center shadow-sm hover:shadow-md" data-action="move" title="Se déplacer">
                    {{ ux_icon('heroicons:arrow-top-right-on-square', { class: 'w-6 h-6 text-blue-500' }) }}
                </button>
                <button class="w-10 h-10 bg-white rounded-full hover:bg-gray-100 transition-all duration-200 flex items-center justify-center shadow-sm hover:shadow-md disabled:opacity-50 disabled:cursor-not-allowed" data-action="block" title="Bloquer" disabled>
                    {{ ux_icon('heroicons:shield-check', { class: 'w-6 h-6 text-grey-500' }) }}
                </button>
                <button class="w-10 h-10 bg-white rounded-full hover:bg-gray-100 transition-all duration-200 flex items-center justify-center shadow-sm hover:shadow-md disabled:opacity-50 disabled:cursor-not-allowed" data-action="blitz" title="Blitz" disabled>
                    {{ ux_icon('heroicons:bolt', { class: 'w-6 h-6 text-grey-500' }) }}
                </button>
                <button class="w-10 h-10 bg-white rounded-full hover:bg-gray-100 transition-all duration-200 flex items-center justify-center shadow-sm hover:shadow-md disabled:opacity-50 disabled:cursor-not-allowed" data-action="pass" title="Passe" disabled>
                    {{ ux_icon('heroicons:arrow-right', { class: 'w-6 h-6 text-grey-500' }) }}
                </button>
                <button class="w-10 h-10 bg-white rounded-full hover:bg-gray-100 transition-all duration-200 flex items-center justify-center shadow-sm hover:shadow-md disabled:opacity-50 disabled:cursor-not-allowed" data-action="foul" title="Agression" disabled>
                    {{ ux_icon('heroicons:exclamation-triangle', { class: 'w-6 h-6 text-grey-500' }) }}
                </button>
            </div>
        </div>
    {% endif %}
</div>

<style>
.action-btn {
    @apply w-12 h-12 bg-white rounded-full hover:bg-gray-100 transition-all duration-200 flex items-center justify-center shadow-sm hover:shadow-md disabled:opacity-50 disabled:cursor-not-allowed;
}
</style> 