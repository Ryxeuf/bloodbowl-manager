{% extends 'base.html.twig' %}

{% block title %}Mes matchs - Blood Bowl Manager{% endblock %}

{% block body %}
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        <div class="px-4 py-5 sm:px-6 flex justify-between items-center">
            <h3 class="text-lg leading-6 font-medium text-gray-900">
                Mes matchs
            </h3>
            <a href="{{ path('app_game_new') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                Nouveau match
            </a>
        </div>
        <div class="border-t border-gray-200">
            {% if games|length > 0 %}
                <ul class="divide-y divide-gray-200">
                    {% for game in games %}
                        <li class="px-4 py-4 sm:px-6 hover:bg-gray-50">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center">
                                    <div class="ml-4">
                                        <div class="text-sm font-medium text-gray-900">
                                            {{ game.homeTeam.name }} vs {{ game.awayTeam.name }}
                                        </div>
                                        <div class="text-sm text-gray-500">
                                            Tour {{ game.currentTurn }} - Score : {{ game.homeScore }} - {{ game.awayScore }}
                                        </div>
                                    </div>
                                </div>
                                <div class="flex items-center space-x-4">
                                    <a href="{{ path('app_game_play', {'id': game.id}) }}" class="inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                        Jouer
                                    </a>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <div class="px-4 py-5 sm:px-6">
                    <p class="text-gray-500 text-center">Vous n'avez pas encore de match.</p>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %} 