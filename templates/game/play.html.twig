{% extends 'base.html.twig' %}

{% block title %}Match {{ game.homeTeam.name }} vs {{ game.awayTeam.name }} - Blood Bowl Manager{% endblock %}

{% block body %}
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        <div class="px-4 py-5 sm:px-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">
                {{ game.homeTeam.name }} vs {{ game.awayTeam.name }}
            </h3>
            <p class="mt-1 max-w-2xl text-sm text-gray-500">
                Tour {{ game.currentTurn }}
            </p>
        </div>
        <div class="border-t border-gray-200">
            <div class="px-4 py-5 sm:px-6">
                <!-- Terrain de Blood Bowl -->
                <div class="w-[480px] mx-auto mb-8">
                    <div class="border-4 border-gray-800">
                        <!-- End zone équipe domicile -->
                        <div class="flex">
                            {% for j in 1..15 %}
                                <div class="w-8 h-8 bg-green-500 border border-white relative">
                                    {% if j == 8 %}
                                        <div class="absolute inset-0 flex items-center justify-center text-white text-[8px]">
                                            End Zone {{ game.homeTeam.name }}
                                        </div>
                                    {% endif %}
                                </div>
                            {% endfor %}
                        </div>

                        <!-- Cases normales -->
                        {% for i in 1..24 %}
                            <div class="flex">
                                {% for j in 1..15 %}
                                    <div class="w-8 h-8 bg-green-700 border border-white"></div>
                                {% endfor %}
                            </div>
                        {% endfor %}

                        <!-- End zone équipe extérieure -->
                        <div class="flex">
                            {% for j in 1..15 %}
                                <div class="w-8 h-8 bg-green-500 border border-white relative">
                                    {% if j == 8 %}
                                        <div class="absolute inset-0 flex items-center justify-center text-white text-[8px]">
                                            End Zone {{ game.awayTeam.name }}
                                        </div>
                                    {% endif %}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div class="text-center">
                        <h4 class="text-lg font-medium text-gray-900">{{ game.homeTeam.name }}</h4>
                        <p class="text-4xl font-bold text-gray-900">{{ game.homeScore }}</p>
                        <form method="post" class="mt-4">
                            <input type="hidden" name="action" value="score_home">
                            <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                                Marquer un TD
                            </button>
                        </form>
                    </div>
                    <div class="text-center">
                        <h4 class="text-lg font-medium text-gray-900">{{ game.awayTeam.name }}</h4>
                        <p class="text-4xl font-bold text-gray-900">{{ game.awayScore }}</p>
                        <form method="post" class="mt-4">
                            <input type="hidden" name="action" value="score_away">
                            <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                                Marquer un TD
                            </button>
                        </form>
                    </div>
                </div>

                <div class="mt-8 text-center">
                    <form method="post">
                        <input type="hidden" name="action" value="next_turn">
                        <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            Tour suivant
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 