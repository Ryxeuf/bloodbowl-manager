{% extends 'base.html.twig' %}

{% block title %}Match {{ game.homeTeam.name }} vs {{ game.awayTeam.name }} - Blood Bowl Manager{% endblock %}

{% block body %}
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        <div class="px-4 py-5 sm:px-6">
            <div class="flex items-center justify-between mb-4">
                <div class="text-2xl font-bold text-gray-900">
                    {{ game.homeTeam.name }}
                </div>
                <div class="text-4xl font-bold text-gray-900">
                    {{ game.homeScore }} - {{ game.awayScore }}
                </div>
                <div class="text-2xl font-bold text-gray-900">
                    {{ game.awayTeam.name }}
                </div>
            </div>
            <div class="text-center text-lg text-gray-500">
                Tour {{ game.currentTurn }}
            </div>
        </div>
        <div class="border-t border-gray-200">
            <div class="px-4 py-5 sm:px-6">
                <!-- Terrain de Blood Bowl -->
                <div class="w-[480px] mx-auto mb-8">
                    <div class="border-4 border-gray-800">
                        <!-- End zone équipe domicile -->
                        <div class="flex border-b-2 border-white">
                        {% set i = 1 %}
                            {% for j in 1..15 %}
                                <div class="w-8 h-8 bg-green-500 hover:bg-green-400 cursor-pointer relative">
                                    <span class="text-white text-[8px]">{{ i }}.{{ j }}</span>
                                    {# {% if j == 8 %}
                                        <div class="absolute inset-0 flex items-center justify-center text-white text-[8px]">
                                            End Zone {{ game.homeTeam.name }}
                                        </div>
                                    {% endif %} #}
                                </div>
                            {% endfor %}
                        </div>

                        <!-- Cases normales -->
                        {% for i in 2..25 %}
                            <div class="flex {% if i == 12 %}border-b-2 border-white{% endif %}">
                                {% for j in 1..15 %}
                                    <div class="w-8 h-8 bg-green-700 hover:bg-green-600 cursor-pointer {% if j == 4 or j == 11 %}border-r-2 border-white{% endif %}">
                                        <span class="text-white text-[8px]">{{ i }}.{{ j }}</span>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endfor %}

                        <!-- End zone équipe extérieure -->
                        <div class="flex border-t-2 border-white">
                            {% set i = 26 %}
                            {% for j in 1..15 %}
                                <div class="w-8 h-8 bg-green-500 hover:bg-green-400 cursor-pointer relative">
                                    <span class="text-white text-[8px]">{{ i }}.{{ j }}</span>
                                    {# {% if j == 8 %}
                                        <div class="absolute inset-0 flex items-center justify-center text-white text-[8px]">
                                            End Zone {{ game.awayTeam.name }}
                                        </div>
                                    {% endif %} #}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>

                <div class="mt-8 text-center">
                    <form method="post">
                        <input type="hidden" name="action" value="next_turn">
                        <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            Tour suivant
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 