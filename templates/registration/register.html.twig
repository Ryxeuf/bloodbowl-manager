{% extends 'base.html.twig' %}

{% block title %}Inscription - Blood Bowl Manager{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8">
            <div>
                <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                    Créer un compte
                </h2>
            </div>
            {{ form_start(registrationForm, {'attr': {'class': 'mt-8 space-y-6'}}) }}
                <div class="rounded-md shadow-sm -space-y-px">
                    <div>
                        {{ form_row(registrationForm.email, {
                            'attr': {'class': 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm'}
                        }) }}
                    </div>
                    <div>
                        {{ form_row(registrationForm.username, {
                            'attr': {'class': 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm'}
                        }) }}
                    </div>
                    <div>
                        {{ form_row(registrationForm.plainPassword, {
                            'attr': {'class': 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm'}
                        }) }}
                    </div>
                </div>

                <div>
                    <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        S'inscrire
                    </button>
                </div>

                <div class="text-sm text-center">
                    <a href="{{ path('app_login') }}" class="font-medium text-blue-600 hover:text-blue-500">
                        Déjà un compte ? Se connecter
                    </a>
                </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %} 